<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE6E6"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="250px">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/myToolbar"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

            <ImageButton
                android:id="@+id/btn_Profile"
                android:layout_width="250px"
                android:layout_height="250px"
                android:layout_marginEnd="10dp"
                android:background="@color/theme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_h_s_c__nh_n" />

            <ImageButton
                android:id="@+id/btn_Bell"
                android:layout_width="250px"
                android:layout_height="250px"
                android:layout_marginStart="250dp"
                android:background="@color/theme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_th_ng_b_o" />

            <ImageButton
                android:id="@+id/btn_Back"
                android:layout_width="150px"
                android:layout_height="250px"
                android:layout_marginTop="3dp"
                android:background="@color/theme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/image_back" />

            <ImageView
                android:id="@+id/img_Khung"
                android:layout_width="450px"
                android:layout_height="150px"
                android:layout_marginStart="52dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/myToolbar"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_khung" />

            <TextView
                android:id="@+id/txt_TrangChu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="2dp"
                android:text="Trang Chủ"
                android:textSize="70px"
                app:layout_constraintBottom_toBottomOf="@+id/img_Khung"
                app:layout_constraintStart_toStartOf="@+id/myToolbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.733" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="250dp"
        android:text="Đặt phòng"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="68dp"
        android:text="Khám Online"
        android:textSize="60px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="470dp"
        android:text="Đo Nhịp Tim"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="56dp"
        android:text="Lịch Sử Khám"
        android:textSize="60px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="88dp"
        android:text="Liên Hệ Chúng Tôi"
        android:textSize="60px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_booking"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginStart="56dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/roundedbutton"
        android:bottomRightRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_bookingbnt" />

    <ImageButton
        android:id="@+id/btn_KhamOnline"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginStart="244dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_khamonline" />

    <ImageButton
        android:id="@+id/btn_HeartRate"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginStart="56dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_heartrate" />

    <ImageButton
        android:id="@+id/btn_LichSuKham"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_lichsukham1" />

    <ImageButton
        android:id="@+id/btn_LienHe"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_contact" />

</androidx.constraintlayout.widget.ConstraintLayout>