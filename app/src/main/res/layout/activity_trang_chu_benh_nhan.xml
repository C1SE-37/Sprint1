<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrangChuBenhNhan">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:background="#A1C4FD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtnback"
        android:layout_width="37dp"
        android:layout_height="250px"
        android:layout_marginTop="0px"
        android:background="#A1C4FD"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="450px"
        android:layout_height="150px"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="196dp"
        android:background="@drawable/custom_edittext"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:text="Trang Chủ"
        android:textSize="70px"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtnThongBao"
        android:layout_width="101dp"
        android:layout_height="250px"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="250px"
        android:background="#A1C4FD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/thong_bao"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibtnTrangCaNhan"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#A1C4FD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ho_so_ca_nhan"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tv_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="250dp"
        android:text="Đặt phòng"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="68dp"
        android:text="Khám Online"
        android:textSize="60px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="470dp"
        android:text="Đo Nhịp Tim"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="56dp"
        android:text="Lịch Sử Khám"
        android:textSize="60px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="88dp"
        android:text="Liên Hệ Chúng Tôi"
        android:textSize="60px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_booking"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginStart="56dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/roundedbutton"
        android:bottomRightRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dat_phong" />

    <ImageButton
        android:id="@+id/btn_KhamOnline"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginStart="244dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kham_onl" />

    <ImageButton
        android:id="@+id/btn_HeartRate"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginStart="56dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/do_nhip_tim" />

    <ImageButton
        android:id="@+id/btn_LichSuKham"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lich_su_kham" />

    <ImageButton
        android:id="@+id/btn_LienHe"
        android:layout_width="350px"
        android:layout_height="350px"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_contact" />


</androidx.constraintlayout.widget.ConstraintLayout>